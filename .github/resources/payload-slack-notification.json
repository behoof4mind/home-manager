{
  "blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "New PR: #${{ env.PULL_REQUEST_NUMBER }} ${{ env.PULL_REQUEST_TITLE }}",
        "emoji": true
      }
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Project:*\n<${{ env.REPO_HTML_URL }}|${{ env.REPO_NAME }}>"
        },
        {
          "type": "mrkdwn",
          "text": "*Created by:*\n<${{ env.CREATOR_URL }}|${{ env.CREATOR_NAME }}>"
        }
      ]
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Size:* ${{ env.PULL_REQUEST_CHANGED_LINES }}"
        },
        {
          "type": "mrkdwn",
          "text": "*Complexity:*${{ env.PULL_REQUEST_COMPLEXITy }}"
        }
      ]
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Affects:*${{ env.PULL_REQUEST_AFFECTS }}"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Description:*${{ env.PULL_REQUEST_SHORT_DESCRIPTION }}"
      }
    },
    {
      "type": "actions",
      "elements": [
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "Open in Browser"
          },
          "url": "${{ env.PULL_REQUEST_URL }}"
        }
      ]
    },
    {
      "type": "divider"
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "Use the following emojies as reactions to the request:\n\n"
        }
      ]
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": ":clock1: - I can look at it later (use Thread)"
        },
        {
          "type": "mrkdwn",
          "text": ":snail: - I would be able to look at it, but have no time"
        },
        {
          "type": "mrkdwn",
          "text": ":x: - I am not able to give a review, I don't know enough"
        },
        {
          "type": "mrkdwn",
          "text": ":hammer: - I'm done reviewing the PR, but I did request some changes"
        },
        {
          "type": "mrkdwn",
          "text": ":work-in-progress: - I will look at it right away"
        },
        {
          "type": "mrkdwn",
          "text": ":done: - I'm done reviewing the PR, all looks good"
        }
      ]
    }
  ]
}
